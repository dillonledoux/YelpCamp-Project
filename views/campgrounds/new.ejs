<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Create a New Campground</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <label for="nameInput">Campground Name</label>
                    <input class="form-control" id="nameInput" type="text" name="name" placeholder="name">
                </div>
                <div class="form-group">
                    <label for="imageUrlInput">Image URL</label>
                    <input class="form-control" id="imageUrlInput" type="text" name="image" placeholder="image url">
                </div>
                <div class="form-group">
                    <label for="price">Price Per Night</label>
                    <input class="form-control" id="price" type="number" name="price" placeholder="price" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <label for="descInput">Description</label>
                    <textarea class="form-control" id="descInput" type="text" name="description"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go back to campgrounds</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

